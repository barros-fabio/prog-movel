<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/collaboratorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/issueNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/lbl_ht_issue_name"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/issueDescEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/lbl_ht_issue_desc"
        android:inputType="textMultiLine"
        android:lines="4" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/noMoneyRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/lbl_radio_no_money" />

        <RadioButton
            android:id="@+id/toPayRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_radio_to_pay" />

        <RadioButton
            android:id="@+id/toReceiveRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_radio_to_receive" />
    </RadioGroup>

    <EditText
        android:id="@+id/issueValueEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/lbl_ht_value"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/issueSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_bt_add_issue" />

</LinearLayout>
